<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.ManageCustomersController">
   <children>
      <HBox alignment="CENTER" prefHeight="51.0" prefWidth="607.0">
         <children>
            <Label text="Manage Customers" textFill="#0000fa">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutY="51.0" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="250.0" prefWidth="607.0">
         <children>
            <TableView fx:id="customerTableView" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="200.0" prefWidth="600.0">
              <columns>
                <TableColumn fx:id="custId_col" prefWidth="75.0" text="Customer ID" />
                <TableColumn fx:id="custName_col" prefWidth="75.0" text="Name" />
                  <TableColumn fx:id="custPhone_col" prefWidth="75.0" text="Phone" />
                  <TableColumn fx:id="custAddId_col" prefWidth="75.0" text="Address ID" />
                  <TableColumn fx:id="custAddress_col" prefWidth="75.0" text="Address" />
                  <TableColumn fx:id="custCity_col" prefWidth="75.0" text="City" />
                  <TableColumn fx:id="custZip_col" prefWidth="75.0" text="Zip Code" />
                  <TableColumn fx:id="custCountry_col" prefWidth="75.0" text="Country" />
              </columns>
            </TableView>
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutY="300.0" prefHeight="100.0" prefWidth="607.0">
         <children>
            <Button fx:id="addCustomer_btn" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" onAction="#addNewCustomer" prefHeight="50.0" prefWidth="200.0" text="Add">
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </Button>
            <Button fx:id="updateCustomer_btn" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" onAction="#UpdateCustomer" prefHeight="50.0" prefWidth="200.0" text="Update">
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </Button>
            <Button fx:id="deleteCustomer_btn" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" onAction="#deleteCustomer" prefHeight="50.0" prefWidth="200.0" text="Delete">
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </Button>
            <Button fx:id="mainMenu_btn" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" onAction="#returnMainMenu" prefHeight="50.0" prefWidth="200.0" text="Main Menu">
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
